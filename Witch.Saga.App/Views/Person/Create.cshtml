@using Witch.Saga.App.Models.ViewModel;
@model PersonViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<form asp-action="Create" method="post">
    <!--AgeOfDeath-->
    <div class="row">
        <div class="col-md-6 form-group">
            <label>Age Of Death</label>
            <input class="form-control" asp-for="AgeOfDeath" type="number" />
        </div>
    </div>

    <!--YearOfDeath-->
    <div class="row">
        <div class="col-md-6 form-group">
            <label>Year Of Death</label>
            <input class="form-control" asp-for="YearOfDeath" type="number" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <input class="btn btn-primary" type="submit" value="Add" />
            <a asp-action="Index" class="btn btn-danger waves-effect waves-light">Cancel</a>
        </div>
    </div>
</form>